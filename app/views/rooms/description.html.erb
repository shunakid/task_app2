<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        タイトル・紹介文
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>

            <div class="row">
              <div class="form-group">
                <label>タイトル</label>
                <%= f.text_field :listing_name, placeholder: "タイトルを入力して下さい", class: "form-control", required: true %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>紹介文</label>
                <%= f.text_area :summary, rows: 5, placeholder: "お部屋について入力して下さい", class: "form-control", required: true %>
              </div>
            </div>

            <div class="text-center">
              <%= f.submit "決定", class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
