<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "登録済みのお部屋", rooms_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "予約されたお部屋", your_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "予約したお部屋", your_trips_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        登録済みのお部屋
      </div>
      <div class="panel-body">

        <% @rooms.each do |room| %>
          <div class="row">
            <div class="col-md-2">
              <div class="panel-heading preview">
                <%= image_tag room.cover_photo %>
              </div>
            </div>
            <div class="col-md-7">
              <h4><%= room.listing_name %></h4>
            </div>
            <div class="col-md-3 right">
              <%= link_to "編集する", listing_room_path(room), class: "btn btn-form" %>
            </div>
          </div>
          <hr/>
        <% end %>
      </div>
    </div>
  </div>
</div>


